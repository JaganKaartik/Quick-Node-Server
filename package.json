{
  "name": "typescript-express-docker-boilerplate",
  "version": "1.0.0",
  "description": "A typescript boilerplate for dockerized express app",
  "main": "index.js",
  "repository": "https://github.com/MyCloudle/Typescript-Express-Docker-Boilerplate",
  "author": "JaganKaartik <kaartikjagan@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start:prod": "NODE_ENV=production APP_ENV=prod node dist/index",
    "start:test": "NODE_ENV=staging APP_ENV=test nodemon dist/index",
    "start:dev": "NODE_ENV=development APP_ENV=dev nodemon dist/index",
    "build": "tsc",
    "lint": "eslint '*/**/*.ts'",
    "lint:fix": "eslint '*/**/*.ts' --fix",
    "prettier": "prettier '*/**/*.ts' --write --color",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn prettier",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.8",
    "@types/passport": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mongoose": "^5.10.11",
    "passport": "^0.4.1",
    "passport-google-oauth2": "^0.2.0",
    "passport-twitter": "^1.0.4"
  }
}
